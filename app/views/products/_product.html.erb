<div class="col-sm-2 col-md-4">
    <%= image_tag(product.image_url, class: "img-responsive") if product.image_url.present? %>
    <a href="#"><h1><%= product.name %></h1></a>
    <p><%= product.description %></p>
    <br> 
    <div class="col-sm-4 col-md-4" id="product-features">
        <h5>Color</h5>
        <h4><strong><%= product.colour %></strong></h4>
    </div>
     <div class="col-sm-4 col-md-4" id="product-features">
        <h5>Price</h5>
        <h4><strong>$<%= product.price %></strong></h4>
    </div>
    <div class="col-sm-4 col-md-4">
        <p><%= link_to 'Show', product %></p>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
        <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div><!-- /col -->
</div>
    
