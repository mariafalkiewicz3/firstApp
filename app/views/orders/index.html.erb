<header>
    <h1 class="header-title">List Of Orders</h1>
</header>
<div class = "container">
    <div class="row">
    <% @orders.each do |order| %>
        <div class="col-sm-2 col-md-4">
            <h1>
                Order #<%= order.id %>
                <%= link_to order.product.name, order %>
            </h1>
            <p><%= order.product.description %></p> 
            <strong>$ <%= order.product.price %></strong>
            
        </div><!-- /col -->
    <% end %>
</div>
    